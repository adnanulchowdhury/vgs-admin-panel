<%= form_with(model: teacher, local: true) do |form| %>
  <% if teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.select :age, (10..149) %>
  </div>

  <div class="field">
    <%= form.label :education %>
    <%= form.select :education, ["HS", "College", "Masters", "PH.D"] %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.select :salary, ["15000", "25000", "35000", "45000", "55000",
    "65000", "78000", "88000", "95000", "125000", "130000", "135000",
    "140000", "150000", "185000"] %>
  </div>

  <div class="field">
    <%= form.label :cohort_id %>
    <%= form.collection_select(:cohort_id, Cohort.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
